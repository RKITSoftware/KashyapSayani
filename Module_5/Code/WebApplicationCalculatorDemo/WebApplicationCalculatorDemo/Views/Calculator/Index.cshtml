
@model WebApplicationCalculatorDemo.Models.Calculator
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<html>
<head>
</head>
<body>

    <h2>Simple Calculator</h2>

    <div class="row">
        @using (Html.BeginForm("/Index", "Calculator", FormMethod.Post))
        {
            <div class="form-group">
                <label for="number1">Number 1</label>
                <input type="text" class="form-control" id="number1" name="number1" value="@Model.number1">
            </div>

            <div class="form-group">
                <label for="number2">Number 2</label>
                <input type="text" class="form-control" id="number2" name="number2" value="@Model.number2">
            </div>

            <div class="form-group">
                <label for="number3">Result</label>
                <input type="text" class="form-control" id="result" name="result" value="@Model.result">
            </div>

            <button type="submit" class="btn btn-info" id="add" value="add" name="calculate">+</button>
            <button type="submit" class="btn btn-danger" id="minus" value="minus" name="calculate">-</button>
            <button type="submit" class="btn btn-warning" id="mul" value="mul" name="calculate">*</button>
            <button type="submit" class="btn btn-default" id="div" value="div" name="calculate">/</button>
        }
    </div>

</body>

</html>

